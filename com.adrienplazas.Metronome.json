{
    "app-id": "com.adrienplazas.Metronome",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "metronome",
    "finish-args" : [
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "CARGO_HOME" : "/run/build/metronome/cargo"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "metronome",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/metronome/uploads/6434b82862b268d2c020a342ec051f88/metronome-1.2.0.tar.xz",
                    "sha256": "aa466ae0ba9f50210f686224e010dc27acce769689ebf3cdd93285810f57261a"
                }
            ]
        }
    ]
}
